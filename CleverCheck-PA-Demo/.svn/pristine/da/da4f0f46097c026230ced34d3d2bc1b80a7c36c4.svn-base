<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:p="http://primefaces.org/ui">
<h:head>
	<meta charset="utf-8" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="apple-mobile-web-app-capable" content="yes" />
	<meta name="viewport"
		content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui" />
	<meta name="apple-mobile-web-app-status-bar-style" content="yes" />

	<title>hp CLEVER CHECK</title>
	<!-- theme fonts -->
	<link href="resources/assets/bootstrap/css/bootstrap.min.css"
		rel="stylesheet" />
	<link href="resources/assets/font-awesome/css/font-awesome.min.css"
		rel="stylesheet" />
	<link href="resources/css/app.css" rel="stylesheet" />
	<script src="resources/js/checkout.js"></script>
	<script>
$(document).ready(function(){
	$("#hide").hide();
	$("#msg").hide();
	
    $("#button").click(function(){
        $("#hide").toggle();
        $("#msg").toggle();
    });
});
</script>
	
<style>
.retrieve{
	text-align: center;
    color: #7d7d7d;
    font-size: 19px;
    margin-top: 11px;
}
.weight{
	font-weight: 100;
}

.ui-growl {
	top: 250px;
}

#addDetails .ui-growl{
    top: 250px;
}

.space{
	padding-top: 3px;
    padding-bottom: 3px;
}
.send .ui-button {
	width: 100%;
	background: #ccc;
    color: #000;
    height: 42px;
    font-weight: 200;
    font-size: 20px;
    text-shadow: none;
}
.send .ui-state-default{
	border: none;
}
.send .ui-state-hover{
	box-shadow: none;
}
.email{
	text-align: center;
	margin-top: 10px;
}
.email .ui-inputfield, .ui-widget-content .ui-inputfield, .ui-widget-header .ui-inputfield {
    background: #fff;
    -moz-box-shadow: none;
    -webkit-box-shadow: none;
    box-shadow: none; 
    width: 100%;
    height: 40px;
}
.email .ui-corner-all {
    -moz-border-radius: 0px;
    -webkit-border-radius: 0px;
    border-radius: 0px; 
}
.send a:hover, a:focus {
    text-decoration: none;
}
</style>
</h:head>
<h:body style="background-color: #fff;overflow-x: hidden; ">

	<h:form id="form1" styleClass="form-vertical">
		<div
			style="background-color: #006DB4; border-bottom: 1px solid #004F8A; height: 60px; padding: 10px 0px; position: fixed; top: 0; z-index: 9999; width: 100%;">
			<div class="container-fluid">
				<div class="row">
				
				
				
					<div class="col-xs-1" style="margin-top: 12px;padding: 4px;padding-left: 1px;  "><h:commandLink value="" immediate="true" action="#{homeBean.getsearchPage}" style="width:0px;"><h:graphicImage value="resources/app/images/back.svg"></h:graphicImage></h:commandLink></div>
					<div class="col-xs-7" style="padding: 0px;margin: 9px 7px 0 -8px;padding-left: 10px;"><h:commandLink value="" immediate="true" action="#{homeBean.mobileHome}" style="width:0px;"><span style="color: #fff;font-size: 19px;font-weight: 600;margin-left: -11px;">CLEVERCHECK</span></h:commandLink></div>
					
					<div class="col-xs-2" style="padding: 0px;    margin: 6px 0 0 -123px;"><h:commandLink value="" immediate="true" action="#{homeBean.mobileHome}" style="width:0px;"><h:graphicImage value="Resources/app/images/Allgebra_Logo.png" style="width:111px;"/></h:commandLink></div>
					
					<div class="col-xs-1" style="margin-top: 12px;margin-left:9px;padding-left: 0px"><h:commandLink value="" immediate="true" action="#{homeBean.getsearchPage}" style="width:0px;"><h:graphicImage value="resources/app/images/search.svg"></h:graphicImage></h:commandLink></div>
	    			<c:choose>
					<c:when test="#{homeBean.cartItems!=0}">
	    			<div class="col-xs-1" style="margin-top: -3px;padding-left: 5px;"><h:commandLink value="" immediate="true" action="#{homeBean.getCartDetails}" style="width:0px;"><span class="badge" style="margin-left: 10px;padding: 1px 3px;background-color: #d32f2f;border-radius: 50%;">#{homeBean.cartItems}</span><h:graphicImage value="resources/app/images/cart.svg"></h:graphicImage></h:commandLink> </div>
	    			</c:when>
	    			<c:otherwise>
	    			<div class="col-xs-1" style="margin-top: -3px;padding-left: 5px;padding-top: 13px;"><h:commandLink immediate="true" value="" action="#{homeBean.getEmptyCart}" style="width:0px;"><span class="badge" style="margin-left: 10px;padding: 1px 3px;background-color: #d32f2f;border-radius: 50%;"></span><h:graphicImage value="resources/app/images/cart.svg"></h:graphicImage></h:commandLink> </div>
	    			</c:otherwise>
	    			</c:choose>
	    			<!-- <div class="col-xs-1" style="margin-top: 8px;"><a href="#{request.contextPath}/logout"><h:graphicImage value="resources/app/images/user.svg"></h:graphicImage></a> </div> -->
	                <div class="col-xs-1" style="margin-top: 11px;"><h:commandLink immediate="true" value="" action="#{userInfoBean.mobileControlPage}" style="width:0px;"><h:graphicImage value="resources/app/images/user.svg"></h:graphicImage></h:commandLink></div>			
				</div>
			</div>
		</div>
	</h:form>

	
	<h:form id="form" style="width:100%;margin-top:68px;">
	<p:growl id="growl" showDetail="true" showSummary="false" life="5000" />
		<div class="row send">
			<a href="#{request.contextPath}/logout">
				<div style="background-color: #D4D9D9; margin-top: -8px; height: 1cm;font-size: 20px;color: #000;text-align: center;padding-top: 5px;">LOGOUT</div>
			</a>

		</div>
		
		<div class="container">
			<div class="col-xs-12 retrieve">
				<p:outputLabel value="User Information"></p:outputLabel>
			</div>
			<div class="row space">
				<div class="col-xs-4">
					<p:outputLabel value="Name"/>
				</div>
				<div class="col-xs-8">
					<p:outputLabel styleClass="weight" value="#{userInfoBean.user.firstname}"/>
				</div>
			</div>
			<div class="row space">
				<div class="col-xs-4">
					<p:outputLabel value="E-Mail"/>
				</div>
				<div class="col-xs-8">
					<p:outputLabel styleClass="weight" value="#{userInfoBean.user.empID}"/>
				</div>
			</div>
			<div class="row space">
				<div class="col-xs-4">
					<p:outputLabel value="Business Units"/>
				</div>
				<div class="col-xs-8">
					<p:outputLabel styleClass="weight" value="#{userInfoBean.user.designation}"/>
				</div>
			</div>
			<div class="row space">
				<div class="col-xs-4">
					<p:outputLabel value="User Type"/>
				</div>
				<div class="col-xs-8">
					<p:outputLabel styleClass="weight" value="#{userInfoBean.user.roles}"/>
				</div>
			</div>
		
		</div>
		
		<div class="row send">
				
		<a id="button" href="#"><div  style="background-color: #D4D9D9; margin-top: -8px; height: 1cm;font-size: 20px;color: #000;text-align: center;padding-top: 5px;">CHANGE PASSWORD</div></a>    								
		</div>
		<div id="hide">
		<h:panelGroup id="msg">
												<p:outputLabel styleClass="showMessage" style="font-size: 11px;" value="Password must satisfy following all rules"/>
													<ol class="showMessage pl" style="font-size: 11px;">
														  <li>Must be of 8 to 20 characters long</li>
														  <li>Must be alphanumeric - have atleast one alphabet and one number</li>
													</ol>
											</h:panelGroup>
			
		
		
		<h:panelGroup>
			<div class="container">
				<div class="col-xs-12 email">
						<p:password styleClass="marginFB"
												placeholder="Current Password"
												value="#{userInfoBean.passwordReset.password}" required="true"
												requiredMessage="Please Enter your Password">
											</p:password>
				</div>
				<div class="col-xs-12 email">
						<p:password id="password"
												value="#{userInfoBean.passwordReset.confpassword}" styleClass="marginFB"
												placeholder="New Password" required="true"
												requiredMessage="Please Enter your new Password"
												validatorMessage="Password must be alphanumeric and 8 to 20 characters long" maxlength="20">
												<f:validateRegex pattern="^[a-zA-Z0-9\-_]{0,40}$"/>
												<f:validateLength minimum="8" />
											</p:password>

				</div>
				<div class="col-xs-12 email">
						<p:password id="conformPassword"
												value="#{userInfoBean.passwordReset.reconfpassword}" styleClass="marginFB"
												placeholder="Retype New Password" required="true"
												requiredMessage="Please Conform your Password"
												maxlength="20">
											<f:validateRegex pattern="^[a-zA-Z0-9\-_]{0,40}$" />
											<f:validateLength minimum="8" />
											</p:password>
				</div>
			</div>
			
			<div class="row send" style="margin-top: 8px;">
				<p:commandButton value="CONFIRM" ajax="false"  actionListener="#{userInfoBean.conform}" update=":form:growl" style="background: #047dd4;color:#fff;"></p:commandButton>
			</div>
		</h:panelGroup>
		</div>
	</h:form>
</h:body>
</html>
