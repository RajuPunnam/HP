package com.techouts.dao;

import java.util.List;

import org.apache.log4j.Logger;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.mongodb.core.MongoTemplate;
import org.springframework.stereotype.Repository;

import com.techouts.pojo.PcShipmentsToHpPojo;

@Repository
public class PcShipmentsToHpDao {
	@Autowired
	private MongoTemplate mongoTemplate;
	Logger logger = Logger.getLogger(PcShipmentsToHpDao.class);

	public List<String> getFindFileDates(String collectionName, String fieldName) {
		return mongoTemplate.getCollection(collectionName)
				.distinct(fieldName);
	}

	public void insertInvoicesData(List<PcShipmentsToHpPojo> shipmentsList) {
		mongoTemplate.insertAll(shipmentsList);

	}

}
